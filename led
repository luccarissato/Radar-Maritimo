// c√≥digo para iniciar o LED
 
#include <Adafruit_NeoPixel.h>

#define PIN1 24       
#define PIN2 22           
#define NUM_LEDS 36

Adafruit_NeoPixel fita1(NUM_LEDS, PIN1, NEO_GRB + NEO_KHZ800);
Adafruit_NeoPixel fita2(NUM_LEDS, PIN2, NEO_GRB + NEO_KHZ800);

void ligaTodasAsFitas(uint8_t r, uint8_t g, uint8_t b) {
  for (int i = 0; i < NUM_LEDS; i++) {
    fita1.setPixelColor(i, fita1.Color(r, g, b));
    fita2.setPixelColor(i, fita2.Color(r, g, b));
  }
  fita1.show();
  fita2.show();
}

void setup() {
  fita1.begin();
  fita2.begin();
  fita1.show(); 
  fita2.show();
}

void loop() {
  ligaTodasAsFitas(0, 0, 255);  
  delay(2000);
}
